{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "curiocodex",
  "main": "./src/worker/index.ts",
  "compatibility_date": "2025-06-17",
  "compatibility_flags": ["nodejs_compat"],
  "ai": {
    "binding": "AI"
  },
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "curiocodex-db",
      "database_id": "dedee2b3-2f8b-4b02-bb1d-cc5ac40eec3c"
    }
  ],
  "kv_namespaces": [
    {
      "binding": "SESSIONS",
      "id": "c0d834b5f5d34bfc82d44524973da751",
      "preview_id": "e4ae434ecd6443cbaf856053b78ab977"
    }
  ],
  "vectorize": [
    {
      "binding": "HOBBY_ITEMS_INDEX",
      "index_name": "hobby-items-index"
    }
  ],
  "r2_buckets": [
    {
      "binding": "ITEM_IMAGES",
      "bucket_name": "curiocodex-item-images"
    }
  ],
  "observability": {
    "enabled": true
  },
  "upload_source_maps": true,
  "assets": {
    "directory": "./dist/client",
    "not_found_handling": "single-page-application"
  }
}
